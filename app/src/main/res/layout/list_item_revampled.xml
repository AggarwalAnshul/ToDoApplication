<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_listview_text"
        android:padding="15dp"
        android:paddingLeft="20dp"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_heightPercent="10%" />

    <TextView
        android:id="@+id/tv_list_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_list_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_listview_title"
        android:padding="15dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/ch_checkbox"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_above="@+id/tv_list_text"
        android:layout_alignEnd="@+id/tv_list_title"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="17dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="22sp"/>
    <!--Thsi is the titls-->
</android.support.percent.PercentRelativeLayout>
